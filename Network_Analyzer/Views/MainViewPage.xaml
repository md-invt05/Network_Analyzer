<Page x:Class="Network_Analyzer.Views.MainViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Network_Analyzer.Views"
      xmlns:viewModels="clr-namespace:Network_Analyzer.ViewModels"
      mc:Ignorable="d"
      Title="MainView" Height="700" Width="1100">
    <Page.DataContext>
    <viewModels:MainWindowViewModel />
  </Page.DataContext>
  <Grid Margin="10">
    <!-- Разбиваем основное содержимое на две строки: верхняя для контента, нижняя для кнопки -->
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <!-- Основной контент делим на два столбца -->
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*" />
      <ColumnDefinition Width="3*" />
    </Grid.ColumnDefinitions>
    
    <!-- Левый блок: Список сетевых интерфейсов -->
    <Border Grid.Row="0" Grid.Column="0" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="5">
      <StackPanel>
        <TextBlock Text="Сетевые интерфейсы" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
        <ListBox ItemsSource="{Binding Interfaces}" 
                 SelectedItem="{Binding SelectedInterface}" 
                 Margin="0,0,0,5">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal" Margin="2">
                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Width="120"/>
                <TextBlock Text="{Binding IPAddress}" Width="120"/>
                <TextBlock Text="{Binding Status}" Foreground="Green" Width="80"/>
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </StackPanel>
    </Border>
    
    <!-- Правый блок: Детальная информация по выбранному интерфейсу -->
    <Border Grid.Row="0" Grid.Column="1" BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="10">
      <StackPanel>
        <TextBlock Text="Детали интерфейса" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Margin="0,5">
          <TextBlock Text="IP Address:" FontWeight="Bold" Width="120"/>
          <TextBlock Text="{Binding SelectedInterface.IPAddress}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5">
          <TextBlock Text="Subnet Mask:" FontWeight="Bold" Width="120"/>
          <TextBlock Text="{Binding SelectedInterface.SubnetMask}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5">
          <TextBlock Text="MAC Address:" FontWeight="Bold" Width="120"/>
          <TextBlock Text="{Binding SelectedInterface.MacAddress}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5">
          <TextBlock Text="Status:" FontWeight="Bold" Width="120"/>
          <TextBlock Text="{Binding SelectedInterface.Status}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5">
          <TextBlock Text="Speed:" FontWeight="Bold" Width="120"/>
          <TextBlock Text="{Binding SelectedInterface.Speed}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5">
          <TextBlock Text="Interface Type:" FontWeight="Bold" Width="120"/>
          <TextBlock Text="{Binding SelectedInterface.InterfaceType}" />
        </StackPanel>
      </StackPanel>
    </Border>
    
    <!-- Нижняя панель: Кнопка навигации -->
    <Button Grid.Row="1" Grid.ColumnSpan="2" Content="Перейти к анализу URL" 
            HorizontalAlignment="Right" Margin="5" Padding="10,5" Width="200"
            Click="OnNavigateToUrlAnalyzerPage"/>
  </Grid>
</Page>
